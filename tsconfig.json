{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"*": [
				"bower_components/*",
				"*"
			]
		},
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true
	},
	"exclude": [
		"bower_components",
		"node_modules"
	]
}